<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PeopleCrud.Views.PeopleView" 
             Title="Novo Cadastro">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Command="{Binding Save}" />
    </ContentPage.ToolbarItems>

    <StackLayout Padding="14">

        <Label Text="Nome" />
        <Entry Text="{Binding PeopleItem.Nome}" />

        <Label Text="Sobrenome" />
        <Entry Text="{Binding PeopleItem.Sobrenome}" />

        <Label Text="Data de Nascimento" />
        <DatePicker Date="{Binding PeopleItem.DataNascimento}" />

        <Label Text="Sexo" />
        <Entry Text="{Binding PeopleItem.Sexo}" />

        <Label Text="Endereço" />
        <Entry Text="{Binding PeopleItem.Endereco}" />

        <Label Text="Cidade" />
        <Entry Text="{Binding PeopleItem.Cidade}" />

         <Label Text="Uf" />
        <Entry Text="{Binding PeopleItem.Uf}" />


        <StackLayout Orientation="Horizontal">
            <Switch IsToggled="{Binding PeopleItem.Deleted}" />
            <Label Text="Esconder/Deletar" />
        </StackLayout>

    </StackLayout>

</ContentPage>