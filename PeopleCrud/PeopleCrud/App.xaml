<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PeopleCrud.App">
    <Application.Resources>
        <ResourceDictionary>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackground" Value="#A25EBB" />
                <Setter Property="BarTextColor" Value="#FFFFFF"/>
            </Style>

            <Style x:Key="FilterButton" TargetType="Button">
                <Setter Property="Margin" Value="15"/>
                <Setter Property="BorderWidth" Value="1"/>
                <Setter Property="BorderRadius" Value="6"/>
                <Setter Property="TextColor" Value="#D8BFD8"/>
            </Style>

            <Color x:Key="DeletedColor">#861b2d</Color>
            <Color x:Key="ActiveColor">#5b851b</Color>
            
        </ResourceDictionary> 
    </Application.Resources>
</Application>